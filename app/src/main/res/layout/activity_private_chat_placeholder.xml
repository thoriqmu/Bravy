<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/placeholder_friends_title"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/shimmer_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/placeholder_friends_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/placeholder_friends_title">

        <include layout="@layout/item_friend_chat_placeholder"/>
        <include layout="@layout/item_friend_chat_placeholder"/>
        <include layout="@layout/item_friend_chat_placeholder"/>
        <include layout="@layout/item_friend_chat_placeholder"/>

    </LinearLayout>

    <View
        android:id="@+id/placeholder_recent_title"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/shimmer_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_friends_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/placeholder_recent_title">

        <include layout="@layout/item_private_chat_placeholder"/>
        <include layout="@layout/item_private_chat_placeholder"/>
        <include layout="@layout/item_private_chat_placeholder"/>
        <include layout="@layout/item_private_chat_placeholder"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>