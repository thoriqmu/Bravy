<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#80000000"
    android:clickable="true"
    android:focusable="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="48dp"
        android:layout_gravity="center"
        app:strokeWidth="1dp"
        app:strokeColor="@color/secondary"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal"
            android:fillViewport="true"
            android:background="@color/primary">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_result_emotion"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:src="@drawable/vector_happy"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mission Complete!"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/onPrimary"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_result_emotion_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="You seem HAPPY"
                android:textSize="18sp"
                android:textColor="@color/onPrimary"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_result_confidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(Confidence: 89%)"
                android:textColor="@color/onPrimary"
                android:textSize="14sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_close_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/secondary"
                android:textColor="@color/onSecondary"
                android:text="OK"
                android:layout_marginTop="24dp"
                app:cornerRadius="10dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>