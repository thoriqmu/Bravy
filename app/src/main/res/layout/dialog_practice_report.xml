<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true"
    android:focusable="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="48dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@color/primary">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_user"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearance="@style/image_rounded"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:src="@drawable/default_picture" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_congratulations"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Results for Level 1"
                    android:textSize="20sp"
                    android:textColor="@color/onPrimary"
                    app:layout_constraintStart_toEndOf="@id/iv_user"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_user"
                    android:layout_marginStart="12dp"
                    tools:text="Results for Level 1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Great job! Here’s your practice report."
                    android:textSize="14sp"
                    android:textColor="@color/onPrimary"
                    app:layout_constraintStart_toStartOf="@id/tv_congratulations"
                    app:layout_constraintTop_toBottomOf="@id/tv_congratulations"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp"
                    tools:text="Great job! Here’s your practice report." />

                <View
                    android:id="@+id/divider_top"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/onPrimary"
                    app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="14dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_confidence"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintTop_toBottomOf="@id/divider_top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/card_cognitive">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_confidence_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confidence"
                            android:textSize="14sp"
                            android:textColor="@color/onBackground"
                            android:fontFamily="@font/poppins_medium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <androidx.appcompat.widget.AppCompatRatingBar
                                android:id="@+id/rating_confidence"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize="1"
                                android:rating="4"
                                android:progressTint="@color/primary"
                                tools:rating="4" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_confidence_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="4/5"
                                android:layout_marginStart="8dp"
                                android:textColor="@color/primary" />
                        </LinearLayout>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_confidence_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Eye contact &amp; ekspresi stabil."
                            android:textSize="12sp"
                            android:textColor="@color/onBackground"
                            android:layout_marginTop="6dp"
                            tools:text="Eye contact &amp; ekspresi stabil." />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_cognitive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintTop_toBottomOf="@id/divider_top"
                    app:layout_constraintStart_toEndOf="@id/card_confidence"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvCognitiveTitletv_cognitive_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Word Accuracy"
                            android:textSize="14sp"
                            android:textColor="@color/onBackground"
                            android:fontFamily="@font/poppins_medium" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progressCognitive"
                            style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:progress="80"
                            app:trackCornerRadius="8dp"
                            app:trackThickness="8dp"
                            app:indicatorDirectionLinear="leftToRight"
                            app:indeterminate="false"
                            app:indicatorColor="@color/primary"
                            tools:progress="80" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_cognitive_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_bold"
                                android:text="8/10"
                                android:textColor="@color/primary" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_cognitive_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80%"
                                android:textSize="12sp"
                                android:textColor="@color/onBackground"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/card_confidence"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvTotalLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Points Earned"
                            android:textSize="14sp"
                            android:textColor="@color/onBackground"
                            android:fontFamily="@font/poppins_medium" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvTotalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="12"
                            android:textSize="18sp"
                            android:textColor="@color/primary"
                            tools:text="12" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/vector_points" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_suggestion_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Suggestions"
                    android:textSize="14sp"
                    android:textColor="@color/onPrimary"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintTop_toBottomOf="@id/card_total"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_suggestion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_suggestion_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:showDividers="middle">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_suggestion_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="Latih ekspresi muka; rekam pada jarak 50–70 cm dengan cahaya frontal." />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_suggestion_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="Ulangi segmen cepat (00:41–00:48) 3× pada 0.75x lalu 1x." />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_suggestion_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="Fokus perbaiki preposisi: at / in / on; review 5 menit/hari." />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_close"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|center"
        android:layout_margin="24dp"
        app:backgroundTint="@color/primary"
        app:tint="@color/onPrimary"
        app:srcCompat="@drawable/ic_close" />

</FrameLayout>