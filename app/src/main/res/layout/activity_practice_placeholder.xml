<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/placeholder_header_bg"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@color/primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/placeholder_activity_today"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:layout_marginTop="120dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/shimmer_placeholder"/>
        <Space
            android:layout_width="15dp"
            android:layout_height="0dp"/>
        <View
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@color/shimmer_placeholder"/>
    </LinearLayout>

    <View
        android:id="@+id/placeholder_levels_title"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:background="@color/shimmer_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/placeholder_activity_today" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/placeholder_levels_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/item_practice_level_placeholder" />
        <include layout="@layout/item_practice_level_placeholder" />
        <include layout="@layout/item_practice_level_placeholder" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>