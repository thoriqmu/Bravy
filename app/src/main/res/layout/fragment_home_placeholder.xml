<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/placeholder_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/shimmer_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/placeholder_user_name"
        android:layout_width="180dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:background="@color/shimmer_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_profile_image" />

    <View
        android:id="@+id/placeholder_start_learning"
        android:layout_width="120dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:background="@color/shimmer_placeholder"
        app:layout_constraintStart_toStartOf="@+id/placeholder_user_name"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_user_name" />

    <View
        android:id="@+id/placeholder_cv_progress"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/shimmer_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_start_learning" />

    <View
        android:id="@+id/placeholder_title_shortcut"
        android:layout_width="150dp"
        android:layout_height="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/shimmer_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_cv_progress" />

    <LinearLayout
        android:id="@+id/placeholder_shortcut_scroll"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/placeholder_title_shortcut">

        <View
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:background="@color/shimmer_placeholder"/>
        <View
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@color/shimmer_placeholder"/>
    </LinearLayout>

    <View
        android:id="@+id/placeholder_title_feel"
        android:layout_width="180dp"
        android:layout_height="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/shimmer_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_shortcut_scroll" />

    <View
        android:id="@+id/placeholder_cv_feel"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/shimmer_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_title_feel" />

</androidx.constraintlayout.widget.ConstraintLayout>